{
  "compilerOptions": {
    "target": "ES2020",                      // Modern JavaScript features
    "module": "CommonJS",                    // Required for Node.js
    "rootDir": "src",                        // Your source code lives here
    "outDir": "dist",                        // Compiled files will go here
    "strict": true,                          // Enable strict type checking
    "esModuleInterop": true,                 // Allow import compatibility
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                    // Skip type checking for node_modules
    "resolveJsonModule": true,               // Allow importing JSON files
    "moduleResolution": "node",              // How modules get resolved
    "types": ["node"]                        // Include Node types
  },
  "include": ["src"],                        // What to compile
  "exclude": ["node_modules", "dist"]        // What to ignore
}
